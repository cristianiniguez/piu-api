{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "plugin:sonarjs/recommended",
    "next/core-web-vitals"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "sort-destructure-keys",
    "sonarjs"
  ],
  "root": true,
  "rules": {
    "no-console": [ "warn", { "allow": [ "warn", "error" ] } ],
    "react/jsx-sort-props": "warn"
  }
}